<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <style>
        .card-container {
            max-width: 1250px;
            display: flex;
            flex-wrap: wrap;
            justify-content: flex-start;
            margin: 50px auto;
        }

        .card {
            width: 300px;
            margin: 20px;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .card h2 {
            font-size: 24px;
        }

        .card p {
            font-size: 18px;
            margin-bottom: 15px;
        }

        .card a {
            text-decoration: none;
            color: #007bff;
        }

        .card a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <h1>Products</h1>
    <div class="card-container">
        <% products.forEach(product => { %>
            <div class="card">
                <h2><%= product.name %></h2>
                <p><strong>Price:</strong> $<%= product.price.toFixed(2) %></p>
                <a href="/products/<%= product.id %>">View Details</a>
            </div>
        <% }); %>
    </div>
</body>
</html>
